generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id          String   @id @default(uuid())
  title       String
  description String   @default("")
  link        String   @unique
  topic       Topic    @default(puzzle)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  playCount   Int      @default(0)
  archived    Boolean  @default(false)

  userGames UserGame[]
  gameLogs  GamePlayLog[]
  dailyStats DailyStats[]
  lists     GameList[] @relation("GameListGames")
  raceGames RaceGame[]

  @@index([topic])
  @@index([archived])
}

model UserGame {
  id       String   @id @default(cuid())
  userId   String
  gameId   String
  playedAt DateTime @default(now())
  hidden   Boolean  @default(false)
  played   Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@index([userId])
  @@index([gameId])
}

model GameList {
  id        String   @id @default(cuid())
  userId    String
  name      String
  createdAt DateTime @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  games Game[] @relation("GameListGames")

  @@index([userId])
}

model SiteConfig {
  id                         String   @id @default("default")
  newGameDays                Int      @default(7)
  topicColors                Json?
  maintenanceMode            Boolean  @default(false)
  welcomeMessage             String?
  showWelcomeMessage        Boolean  @default(false)
  featuredGameIds            String[]
  minPlayStreak              Int      @default(1)
  enableCommunitySubmissions Boolean  @default(false)
  defaultSort                String   @default("title")
  maxCustomLists             Int      @default(10)
  updatedAt                  DateTime @updatedAt
}


enum Topic {
  words
  puzzle
  geography
  trivia
  entertainment
  gaming
  nature
  food
  sports
}

enum Role {
  owner
  coowner
  admin
  member
}

model User {
  id            String     @id
  name          String
  email         String
  emailVerified Boolean    @default(false)
  image         String?
  role          Role       @default(member)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  sessions      Session[]
  accounts      Account[]
  userGames     UserGame[]
  gameLogs      GamePlayLog[]
  gameLists     GameList[]
  submissions   GameSubmission[]
  racesOwned    Race[]
  raceParticips RaceParticipant[]

  @@unique([email])
  @@map("user")
}

model Race {
  id          String   @id @default(cuid())
  name        String
  createdBy   String?
  status      RaceStatus @default(waiting)
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  
  user        User?    @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  participants RaceParticipant[]
  raceGames    RaceGame[]
  
  @@index([status])
}

enum RaceStatus {
  waiting    // Waiting for opponent
  ready      // Both joined, not started
  active     // Race in progress
  completed  // Race finished
  cancelled  // Race cancelled
}

model RaceParticipant {
  id          String   @id @default(cuid())
  raceId      String
  userId      String?  // Optional for guest users
  guestName   String?  // Used when userId is null
  joinedAt    DateTime @default(now())
  finishedAt  DateTime?
  totalTime   Int?     // Seconds
  
  race        Race     @relation(fields: [raceId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  completions RaceCompletion[]
  
  @@unique([raceId, userId])
  @@index([raceId])
}

model RaceGame {
  id          String   @id @default(cuid())
  raceId      String
  gameId      String
  order       Int
  
  race        Race     @relation(fields: [raceId], references: [id], onDelete: Cascade)
  game        Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  completions RaceCompletion[]
  
  @@index([raceId])
}

model RaceCompletion {
  id              String   @id @default(cuid())
  raceGameId      String
  participantId   String
  completedAt     DateTime @default(now())
  timeToComplete  Int      // Seconds from race start
  skipped         Boolean  @default(false)
  
  raceGame        RaceGame        @relation(fields: [raceGameId], references: [id], onDelete: Cascade)
  participant     RaceParticipant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  
  @@unique([raceGameId, participantId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model GamePlayLog {
  id        String   @id @default(cuid())
  userId    String
  gameId    String
  playedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId, playedAt])
}

model DailyStats {
  id        String   @id @default(cuid())
  date      DateTime
  gameId    String
  playCount Int      @default(0)

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([date, gameId])
  @@index([date])
}

model GameSubmission {
  id          String           @id @default(cuid())
  title       String
  link        String
  topic       Topic
  description String
  submittedBy String
  status      SubmissionStatus @default(PENDING)
  reviewNote  String?
  createdAt   DateTime         @default(now())
  reviewedAt  DateTime?
  reviewedBy  String?

  user User @relation(fields: [submittedBy], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([submittedBy])
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
  DUPLICATE
}
